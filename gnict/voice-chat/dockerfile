# docker build -t nipa_demo/voice_chat .

# docker tag nipa_demo/voice_chat 10.0.0.161:5000/voice_chat
# docker push 10.0.0.161:5000/voice_chat

# docker run --gpus all --rm -d -it -p 20443:20443 --name voice_chat nipa_demo/voice_chat
# or if you use nvidia-docker
# nvidia-docker run --rm -d -it -p 20443:20443 --name voice_chat nipa_demo/voice_chat

# docker -H 10.0.0.110:2375 run --gpus all --rm -d -it --network="dockernet" --ip="10.1.92.126" --name voice_chat 10.0.0.161:5000/voice_chat

FROM node:slim

ENV DEBIAN_FRONTEND noninteractive
ENV SERVICE_PORT 20443

ENV gnictProcPort 20080
ENV gnictChatPort 20443
ENV gnictHost gnlabs.iptime.org

ENV ketiPort 28443
ENV ketiHost ketiair.com

ADD app /root/app

WORKDIR /root/app

RUN npm i

CMD ["npm", "start"]

EXPOSE ${SERVICE_PORT}

